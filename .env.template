# StructCrew Lead Generation - Configuration
# Copy this file to .env and fill in your credentials

# ========== INSTAGRAM SCRAPING ==========
INSTAGRAM_USERNAME=archijobs
MAX_POSTS=500                    # Start with 500, increase later
HEADLESS=false                   # Set to true for background mode

# ========== CLAUDE API (OCR) ==========
CLAUDE_API_KEY=                  # Get from https://console.anthropic.com/
USE_CLAUDE=true                  # Set to false to use Tesseract instead
OCR_BATCH_SIZE=50

# ========== EMAIL EXTRACTION ==========
VALIDATE_EMAILS=true             # Validate email syntax

# ========== DATABASE ==========
DATABASE_FILE=data/leads.db

# ========== EMAIL SENDING (Gmail API) ==========
FROM_NAME=Your Name Here
FROM_EMAIL=your.email@gmail.com
UNSUBSCRIBE_EMAIL=your.email@gmail.com

# Email limits
DAILY_EMAIL_LIMIT=100            # 100 for free Gmail, 1500 for Google Workspace
BATCH_SIZE=50

# Email template
SUBJECT=Architecture Collaboration Opportunity
EMAIL_TEMPLATE=templates/cold_email.html

# Gmail API credentials file path
GMAIL_CREDENTIALS=credentials.json

# ========== DIRECTORIES ==========
RAW_IMAGES_DIR=data/raw_images
EXTRACTED_TEXT_DIR=data/extracted_text

# ========== ADVANCED (Optional) ==========
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Rate limiting (seconds between API calls)
RATE_LIMIT_DELAY=1

# Scroll delays for scraping (min, max in seconds)
SCROLL_DELAY_MIN=3
SCROLL_DELAY_MAX=7

# Download delays (min, max in seconds)
DOWNLOAD_DELAY_MIN=2
DOWNLOAD_DELAY_MAX=4
